<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/static/img/favicon.ico">
    <title>Мурзатай</title>
    <link rel="stylesheet" type="text/css" href="/static/css/main.css">
</head>

<body class="body">
    {{> header }}
    <section class="main">
        <div class="main__content">
            <div class="my-page__js-about" data-user-id="{{userId}}"></div>
            {{#if this.isAdmin}}
            <div class="my-page__admin-links">
                <a class="link my-page__admin-link" href="/index/edit">Редактировать главную</a>
                <a class="link my-page__admin-link" href="/about/edit">Редактировать страницу о себе</a>
            </div>
            {{/if}}
            <section class="my-page__favourite">
                <h2 class="my-page__favourite-section-title">Избранные статьи</h2>
                {{#each articles}}
                <article class="my-page__favourite-article">
                    {{#if this.img}}
                    <img class="my-page__favourite-img" src={{this.img}}>
                    {{else}}
                    <img class="my-page__favourite-img" src="/static/img/placeholders/article.png">
                    {{/if}}
                    <div class="my-page__favourite-preview">
                        <h4 class="my-page__favourite-preview-title">{{this.title}}</h4>
                        <p class="my-page__favourite-preview-text">{{this.description}}</p>
                        <a class="link" href="/articles/{{this.slug}}">Читать...</a>
                    </div>
                </article>
                {{/each}}
            </section>
            <section class="my-page__comments">
                <!--Два последних комментария оставленных пользователем-->
                <h2 class="my-page__comments-title"> Последние комментарии</h2>
                {{#each comments}}
                <article class="my-page__comment">
                    <img class="my-page__comment-img" src="/static/{{../avatar}}" alt="Автарка">
                    <p class="my-page__comment-text">{{this.text}}</p>
                </article>
                {{/each}}
            </section>
        </div>
        {{> sidebar this}}
    </section>
    {{> footer }}
    <script type="module" src="/static/js-build/main.js"></script>
</body>

</html>