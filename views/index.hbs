<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
    <title>Мурзатай</title>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
</head>

<body class="body">
    {{> header }}
    <section class="main">
        <div class="main__content">
            <figure class="banner">
                <img src="{{this.img}}" alt="Фото" class="banner__img">
                <figcaption class="banner__caption"></figcaption>
            </figure>
            {{#each articles}}
            <figure class="last-articles">
                {{#if this.img}}
                <img width="160" height="160" src={{this.img}} alt="Фото" class="last-articles__img">
                {{else}}
                <img width="160" height="160" src="/img/placeholders/last-article.png" alt="Фото" class="last-articles__img">
                {{/if}}
                <figcaption class="last-articles__preview">
                    <h2 class="last-articles__preview-title">{{this.title}}</h2>
                    <p class="last-articles__preview-text">{{this.description}}</p>
                    <a href="/articles/{{this.slug}}" class="link">Читать...</a>
                </figcaption>
            </figure>
            {{/each}}
        </div>
        {{> sidebar}}

    </section>

    {{> footer }}
    {{> popup }}
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script type="module" src="/js-build/main.js"></script>
    <script>
        marked.setOptions({ breaks: true });
        document.querySelector(".banner__caption").innerHTML = marked.parse(`{{{this.sanitizedHTML}}}`)
    </script>
</body>

</html>