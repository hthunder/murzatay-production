<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="/img/favicon.ico">
        <title>Мурзатай</title>
        <link rel="stylesheet" type="text/css" href="/css/main.css">
    </head>

    <body class="body">
        {{> header }}
        <section class="main">
            <div class="main__content forgot-pass">
                <form class="form forgot-pass__form" action="/auth/forgot-pass" method="POST">
                    <h1 class="form__title">Забыли пароль?</h1>
                    <label class="label">
                        <span class="label__title label__title_block">Email:</span>
                        <input class="input input_wide" type="email"  name="email" required/>    
                    </label>
                    <button class="button button_light button_wide button_default" type="submit">Восстановить</button>
                </form>
            </div>
            {{> sidebar}}
        </section>
        {{> footer }}
        {{> popup }}
        <script type="module" src="/js/dist/main.js"></script>
    </body>
</html>
