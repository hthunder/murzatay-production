				<div class="about__author-text"></div>
			</div>
		</div>
		{{> sidebar }}
	</section>
	{{> footer }}



	{{> popup }}

	<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <script>
        marked.setOptions({ breaks: true });
        document.querySelector('.about__author-text').innerHTML = marked.parse(`{{{this.sanitizedHTML}}}`);
    </script>
	<script type="module" src="/js-build/main.js"></script>

</body>

</html>